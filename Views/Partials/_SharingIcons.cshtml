@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Routing
@using Umbraco.Extensions

@inject IPublishedValueFallback PublishedValueFallback
@inject IPublishedUrlProvider PublishedUrlProvider

@{
    int pageID = 1154;
    bool isHome = Model != null && Model.Id == pageID;
}

@if (!isHome && Model != null && Model.Value<bool>("ShowSharingIcons"))
{
    var url = SharedHelper.PortalPath + Model.Url();

    <!-- start sharing-tools -->
    <section class="inContent inContent_Share">
        <div class="container">
            <div class="share">
                <h4>
                    <img src="/css/assets/images/internal/share.svg" alt="">
                    @SharedHelper.GetDictionaryValue("Share", Umbraco)
                    @* @Umbraco.GetDictionaryValue("Share") *@
                </h4>
                <!-- Icons -->
                <a href="@Html.Raw("https://www.linkedin.com/cws/share?url=" + url)" target="_blank">
                    <img src="/css/assets/images/internal/linkedin.svg" alt="">
                </a>
                <a href="@Html.Raw("https://twitter.com/share?text=NCSP&url=" + url)" target="_blank">
                    <img src="/css/assets/images/internal/twitter.svg" alt="">
                </a>
                @* <a href="@Html.Raw("https://www.facebook.com/sharer.php?u=" + url)" target="_blank">
                    <img src="/css/assets/images/internal/facebook.svg" alt="">
                </a> *@
            </div>
        </div>
    </section>
    <!-- end sharing-tools -->
}
